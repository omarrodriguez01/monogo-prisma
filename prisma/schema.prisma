datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Team {
  id      String    @id @default(auto()) @map("_id") @db.ObjectId
  name    String
  Student Student[]
}

model Student {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  generation Int
  teamId     String
  team       Team   @relation(fields: [teamId], references: [id])
}
